{
  "project": "contagio",
  "services": [
    {
      "id": "database",
      "apps": [
        {
          "id": "mongodb",
          "image": "mongo:4.4.4",
          "instances": 1,
          "mem": 512,
          "volumes": [
            {
              "container_path": "/data/db",
              "size": "8GB"
            },
            {
              "container_path": "/data/configdb",
              "size": "8GB"
            }
          ],
          "health_checks": [
          ],
          "logging": null
        }
      ]
    },
    {
      "id": "frontend",
      "apps": [
        {
          "id": "contagio",
          "image": "ghcr.io/ischlecken/contagio:210425.2",
          "instances": 1,
          "mem": 512,
          "domain": {
            "uri": "til.sloppy.zone"
          },
          "ssl": true,
          "port_mappings": [
            {
              "container_port": 13013
            }
          ],
          "env": {
            "ACTIVE_PROFILE": "sloppy",
            "MONGODB_URI": "mongodb://mongodb.database.contagio:27017"
          },
          "volumes": [
          ],
          "health_checks": [
          ],
          "logging": null
        }
      ]
    }
  ]
}
